<div class="container" id="form-container">


 <br>
   <form class="col s12" action="/users/<%=current_user.id%>" method="POST">
     <input type="hidden" name="_method" value="PUT">
     <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

     <br>
     <div class="row" id="widgets">
       <div class="card grey darken-1">
         <div class="card-content white-text">
           <span class="card-title">Maps</span>
             <p>
              Get real-time transit information for your daily commute to make sure you're on time.
              </p><br>
            <input type="text" placeholder="your address" name="user[origin_location]">
            <input type="text" placeholder="your destination" name="user[destination_location]">
            <br>

            <label>Select your mode of transportation</label>
            <select name="user[mode]">
              <option value="" disabled selected>Choose your option</option>
              <option value="car">car</option>
              <option value="public transit">public transit</option>
              <option value="bicycle">bicycle</option>
            </select>
            <br>
            <label>If public transit, choose your preferred type</label>
            <select name="user[transit_mode]">
              <option value="" disabled selected>Choose your option</option>
              <option value="bus">bus</option>
              <option value="muni">muni</option>
              <option value="bart">bart</option>
            </select>
          </div>

          <div class="card-action">
          <% if @user.maps %>
            <div class="switch" unchecked><label>Off<input name="user[maps]" id="switch-is-on-1" type="checkbox" checked><span class="lever"></span>On</label>
            </div>
          <br>
          <% else %>
            <div class="switch">
              <label>
              Off
              <input type="checkbox" id="mycheckbox" name="user[maps]">
              <span class="lever"></span>
              On
              </label>
            </div>
          <% end %>
          </div>
      </div>

