

<% if @user %>
Its Logged in <%= @user.username %>
<%else %>
NOT logged in
<%end %>

<%= link_to "Register new device", new_devices_path, class: "waves-effect waves-light btn"%>

<div class="container">
 <div class="row">
   <h2 class="col s12">Set Your Alarm</h2>
   <form class="col s12" action="/users/<%=current_user.id%>" method="POST">
     <input type="hidden" name="_method" value="PUT">
     <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

     <div class="row">
       <div class="input-field col s12">
         <label for="input_date">Date</label>
         <input id="input_date" class="datepicker" type="date" name="date">
       </div>
     </div>

     <div class="row">
       <div class="input-field col s12">
         <label for="input_endtime">Time</label><br />
         <input id="input_endtime" class="timepicker" type="time" name="user[time]">
       </div>
     </div>
     <br />

     <div class="row">
      <div class="col s12 m6">
       <div class="card blue-grey darken-1">
        <div class="card-content white-text">
         <span class="card-title">Maps</span>
         <p>
          Blah blah directions blahhhhhhhhh
        </p><br>
        <input type="text" placeholder="your address" name="user[origin_location]">
        <input type="text" placeholder="your destination" name="user[destination_location]">
        <br>

        <label>Select your mode of transportation</label>
        <select name="user[mode]">
          <option value="" disabled selected>Choose your option</option>
          <option value="car">car</option>
          <option value="public transit">public transit</option>
          <option value="bicycle">bicycle</option>
        </select>
        <br>
        <label>If public transit, choose your preferred type</label>
        <select name="user[transit_mode]">
          <option value="" disabled selected>Choose your option</option>
          <option value="bus">bus</option>
          <option value="muni">muni</option>
          <option value="bart">bart</option>
        </select>
      </div>

      <div class="card-action">
       <% if @user.maps %>
       <div class="switch" unchecked><label>Off<input name="user[maps]" id="switch-is-on-1" type="checkbox" checked><span class="lever"></span>On</label>
       </div>
       <br>
       <% else %>
       <div class="switch">
         <label>
          Off
          <input type="checkbox" id="mycheckbox" name="user[maps]">
          <span class="lever"></span>
          On
        </label>
      </div>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
 <div class="col s12 m6">
   <div class="card blue-grey darken-1">
     <div class="card-content white-text">
       <span class="card-title">Weather</span>
       <p>
         Blah blah weather blahhhhhhhhh
       </p><br>
       <input type="text" placeholder="zip code" name="user[zip]">

     </div>
     <div class="card-action">
       <% if @user.weather %>
       <div class="switch" unchecked><label>Off<input name="user[weather]" id="switch-is-on" type="checkbox" checked><span class="lever"></span>On</label>
       </div>
       <br>
       <% else %>
       <div class="switch">
         <label>
           Off
           <input type="checkbox" id="mycheckbox" name="user[weather]">
           <span class="lever"></span>
           On
         </label>
       </div>
       <% end %>
     </div>
   </div>
 </div>

</div>

<input class="waves-effect waves-light btn-large" type="submit" onclick="value_()">

</form>
</div>
</div>
